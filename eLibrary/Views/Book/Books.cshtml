@model List<eLibrary.ViewModels.BookVM>

<div class="container">
    <div class="row">
        @foreach (var book in Model)
        {
            <div class="col-lg-3">
                <div class="card">
                    <div class="card-img">
                        <img src="@book.BookPicURL" />
                    </div>
                    <div class="card-title">
                        @book.Title
                    </div>
                    <div class="card-subtitle">
                        @book.Description
                    </div>
                    <div class="card-subtitle">
                        @book.Author
                    </div>

                </div>
            </div>
        }
    </div>
</div>